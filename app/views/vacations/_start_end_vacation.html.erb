<div class="vacation-dates-container col-lg-offset-2">
<%= form_for(@vacation, {:method => 'put', :html => {class: "form-horizontal"}}) do |f| %>
  <div class="form-group">
      <%= f.label 'Start', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_field :start, class: "form-control" %>
      </div>
      <%= f.label 'End', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_field :end, class: "form-control" %>
      </div>
      <%= f.submit class: "dates-submit col-lg-offset-2 btn btn-primary btn-lg", value: "Set Dates" %>
  </div>
<% end %>
</div>

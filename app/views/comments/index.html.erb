<h1>Listing comments</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.content %></td>
    <td><%= comment.user_id %></td>
    <td><%= link_to 'Show', [comment.topic, comment] %></td>
    <td><%= link_to 'Edit', edit_topic_comment_path(comment.topic, comment) %></td>
    <td><%= link_to 'Destroy', [comment.topic, comment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_topic_comment_path(params[:topic_id]) %>

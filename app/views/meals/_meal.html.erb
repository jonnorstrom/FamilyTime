<div class="meal-item thumbnail">
<p class="meal-time card-text"><%= "#{meal.day.strftime("%A")} #{meal.day.strftime("%b")} #{meal.day.day.ordinalize}"%></p>

<% if !meal.user_id && current_user.is_admin %>
    <%= render partial: 'meals/form', locals: {this_meal: meal} %>
<% else %>
    <%= render partial: 'meals/accounted_for', locals: {meal: meal} %>
<% end %>
</div>

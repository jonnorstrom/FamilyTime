<p id="notice"><%= notice %></p>

<% if @topic.is_open == false %>
  <h1> This topic is closed </h1>
<% end %>

<%= link_to 'Go Back', vacation_path(@topic.vacation) %>
<p>
  <b>Name:</b>
  <%= @topic.name %>
</p>

<p>
  <b>Description:</b>
  <%= @topic.description %>
</p>

<%= render @topic.comments %>

<% if @topic.is_open == true %>
  <h2>Write a Comment</h2>
  <%= render 'comments/form' %>

  <%= render 'close' %>
<% end %>


<% if meal_form? && form_is_closed("Where/When") %>

<% end %>

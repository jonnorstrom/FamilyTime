<!DOCTYPE html>
<html>
  <head>
    <title>FamilyTime</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Lato" />
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid col-sm-4">
        <% if current_user %>
        <ul class="nav navbar-nav navbar-left">
            <li class="dropdown">
              <a class="dropdown-toggle nav-li" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.first_name %><span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Logout", sessions_destroy_path %></li>
                <li><%= link_to "Change Password", edit_user_path(current_user) %></li>
              </ul>
            </li>
            <li class="nav-li"><%= link_to "Home", root_path %></li>
        </ul>
        <% end %>
      </div>
      <div class="container-fluid col-sm-4">
        <h2 id="main-title" class="text-center">Family Time</h2>
      </div>
    </nav>
    <div class="main-container">
      <%= yield %>
    </div>
  </body>
</html>
